<h1>What's up my man </h1>
<ul>
  <% @tasks.each do |task| %>
    <li>
    <% if task.completed %>
    <i class="fas fa-check-square"></i>
    <% else %>
    <i class="far fa-square"></i>
    <% end %>
    <%= link_to task.title, task_path(task) %>
    <%= link_to delete_path(task), method: :delete, data: { confirm: "Are you sure?" } do %>
      <i class="fas fa-trash"></i>
    <% end %>
    </li>
  <% end %>
</ul>

